---
interface Props {
  title: string;
  stylesheets?: string[];
}

const { title, stylesheets = [] } = Astro.props;
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    {stylesheets.map((href) => <link rel="stylesheet" href={`${base}${href.slice(1)}`} />)}
  </head>
  <body>
    <slot />
  </body>
</html>
