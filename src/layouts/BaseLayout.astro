---
interface Props {
  title: string;
  stylesheets?: string[];
}

const { title, stylesheets = [] } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    {stylesheets.map((href) => <link rel="stylesheet" href={href} />)}
  </head>
  <body>
    <slot />
  </body>
</html>
