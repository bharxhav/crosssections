---
import { getNavigation } from "../config/navigation";

interface Props {
  slug: string;
  section?: "www" | "home";
}

const { slug, section = "www" } = Astro.props;
const nav = section === "www" ? getNavigation(slug) : null;
---

<nav class="www-nav">
  {nav?.prev ? (
    <a href={`/www/${nav.prev.slug}`} class="prev">{nav.prev.slug}</a>
  ) : (
    <a href="/" class="prev">home</a>
  )}

  <span class="current">
    <a href="/">crosssections</a> &gt; <a href="/www/">www</a> &gt; {slug}
  </span>

  {nav?.next ? (
    <a href={`/www/${nav.next.slug}`} class="next">{nav.next.slug}</a>
  ) : (
    <span class="next" style="opacity: 0.3">end</span>
  )}
</nav>
